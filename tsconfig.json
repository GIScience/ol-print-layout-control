// will be used by vite's rollup plugin to generate type files (*.d.ts) only
// the actual transpilation will be done by vite
{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "useDefineForClassFields": true,

    /* Modules */
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    /* Emit */
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "declarationDir": "./dist",
    "noEmitOnError": false,
    "noEmit": false,

//    "sourceMap": true, // not relevant for declaration-file generation

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true,
  },
  "include": [
    "src/ol-print-layout-control.ts"
  ]
}
