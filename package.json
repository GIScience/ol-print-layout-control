{
  "name": "@giscience/ol-print-layout-control",
  "version": "1.1.0",
  "description": "An extension of an OpenLayers Control. It Helps the user to define a map area that fits to the desired output page format and orientation.",
  "files": [
    "dist"
  ],
  "main": "dist/ol-print-layout-control.js",
  "type": "module",
  "types": "./dist/ol-print-layout-control.d.ts",
  "exports": {
    ".": {
      "default": "./dist/ol-print-layout-control.js"
    },
    "./dist/ol-print-layout-control.css": {
      "default": "./dist/ol-print-layout-control.css"
    }
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "docs": "documentation readme src/ol-print-layout-control.ts --section=Docs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "build": "vite build",
    "preversion": "npm run test -- --run",
    "version": "npm run build && npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GIScience/ol-print-layout-control.git"
  },
  "keywords": [
    "ol",
    "openlayers",
    "control",
    "print-layout"
  ],
  "author": "M. Auer (https://heigit.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GIScience/ol-print-layout-control/issues"
  },
  "homepage": "https://github.com/GIScience/ol-print-layout-control#readme",
  "devDependencies": {
    "@vitest/coverage-istanbul": "^3.2.4",
    "documentation": "^14.0.3",
    "ol": "^10.6.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
